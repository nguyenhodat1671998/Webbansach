@model WebCuaHangSach.Models.AccountLogin
@{
    ViewBag.Title = "Login";
}

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <div class="login-box">
                    <h4 class="login-title">New Customer</h4>
                    <p><span class="font-weight-bold">Register</span></p>
                    <p>
                        By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the
                        orders
                        you have previously made.
                    </p>
                    <a href="#" class="btn btn-outlined   mr-3">Continue</a>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                <form action="~/Account/Login" method="post">
                    <div class="login-form">
                        <h4 class="login-title">Returning Customer</h4>
                        <p><span class="font-weight-bold">I am a returning customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label for="email">Enter you email address here...</label>
                                <input class="mb-0 form-control" type="text" name="UserName" id="UserName" placeholder="Enter your username here...">
                            </div>
                            <div class="col-12 mb--20">
                                <label for  ="password">Password</label>
                                <input class="mb-0 form-control" type="PassWord" name="PassWord" id="PassWord">
                                <a href="" class="forget-pass">Forgotten Password</a>
                            </div>
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-outlined" value="Đăng nhập"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>